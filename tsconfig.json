{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@node-di-example/services": [
        "./services"
      ],
    },
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*",
    "__test__"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}